set(CMAKE_SYSTEM_NAME Linux)

set(CMAKE_SYSROOT ${CMAKE_CURRENT_LIST_DIR}/_sysroot/)
set(PKG_CONFIG_EXECUTABLE ${CMAKE_CURRENT_LIST_DIR}/arm-pkg-config ${CMAKE_SYSROOT})

# Using hard coded version numbers to ensure everybody uses the same toolset.
set(CMAKE_C_COMPILER /usr/bin/arm-linux-gnueabihf-gcc-4.9)
set(CMAKE_CXX_COMPILER /usr/bin/arm-linux-gnueabihf-g++-4.9 -Wl,-rpath=${CMAKE_SYSROOT}lib/arm-linux-gnueabihf/)

include_directories(${CMAKE_SYSROOT}usr/include/c++/4.9)
include_directories(${CMAKE_SYSROOT}usr/include/arm-linux-gnueabihf/c++/4.9/)
include_directories(${CMAKE_SYSROOT}usr/include/c++/4.9/backward)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

set(CPACK_DEBIAN_PACKAGE_ARCHITECTURE armhf)

